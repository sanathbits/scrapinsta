# Copy to a local .env file (do not commit .env)
INSTAGRAM_USERNAME=your_username_here
INSTAGRAM_PASSWORD=your_password_here

# Optional: default URL to capture if you don't pass one on the command line
TARGET_URL=https://www.instagram.com/

# Optional: set to 1 to see the browser window
HEADFUL=0

# Optional: set to 1 to keep the browser open (useful while debugging)
KEEP_OPEN=0

# Optional: set to 1 to save extra login debug screenshots in the output folder
DEBUG_LOGIN=0

# Optional: persistent Chrome profile directory (sessions/cookies reused across runs)
PROFILE_DIR=./chrome-profile
